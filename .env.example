# Docker Compose environment variables template

# PostgreSQL
POSTGRES_DB=transactionprocessor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# AWS / LocalStack
AWS_REGION=us-east-1
LOCALSTACK_SERVICES=s3,sqs,secretsmanager,cognito-idp

# API (.NET)
ASPNETCORE_ENVIRONMENT=Development
CONNECTIONSTRINGS__DEFAULTCONNECTION=Host=db;Port=5432;Database=transactionprocessor;Username=postgres;Password=postgres
AWS_S3_SERVICEURL=http://localstack:4566
AWS_SQS_SERVICEURL=http://localstack:4566

# Frontend (Vite)
VITE_API_BASE_URL=http://localhost:5000
VITE_API_URL=http://localhost:5000
